<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core" 
             xmlns:local="clr-namespace:Tai_Shi_Xuan_Ji_Yi.Controls" 
            x:Class="Tai_Shi_Xuan_Ji_Yi.Controls.RadioButtonGroup" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Width="175">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel x:Name="stackPanel" Background="{DynamicResource 侧边栏背景色}" SnapsToDevicePixels="True">
            <RadioButton Foreground="White" Style="{DynamicResource RadioButtonStyle1}" Height="Auto" VerticalAlignment="Center" IsChecked="True"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
